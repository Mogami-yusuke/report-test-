#include <stdio.h>

int main(void)
{
  int n;

  char a[] = "abcdefghijklmnopqrstuvwxyz";

  char b[] = "fudgoh";/*暗号文*/
  /*平文：cradle 意味は「ゆりかご」*/
  /*平文の文字を3文字分だけ右にずらす。←暗号鍵*/
  /*暗号文の文字を3文字分だけ左にずらす。←複合鍵*/
  
  printf("暗号文:%ts\n",b);
  
  for(n=0;n<26;n++)
  {
    if(n+5<26) /*暗号文の１文字目の部分をずらす*/
  {
    b[0]=a[n+5];
  }
  else
  {
    b[0]=a[(n+5)-26];
  }
  if(n+20<26) /*暗号文の2文字目の部分をずらす*/　
  {
    b[1]=a[n+20];
  }
  else
  {
    b[1]=a[(n+20)-26];
  }
  if(n+3<26) /*暗号文の3文字目の部分をずらす*/
  {
    b[2]=a[n+3];
  }
  else
  {
    b[2]=a[(n+3)-26];
  }
  if(n+6<26) /*暗号文の4文字目の部分をずらす*/
  {
    b[3]=a[n+6];
  }
  else
  { 
    b[3]=a[(n+6)-26];
  }
  if(n+14<26) /*暗号文の5文字目の部分をずらす*/
  {
    b[4]=a[n+14];
  }
  else
  {
    b[4]=a[(n+14)-26];
  }
  if(n+7<26) /*暗号文の6文字目の部分をずらす*/
  {
    b[5]=a[n+7];
  }
  else
  {
    b[5]=a[(n+7)-26];
  }

  printf("平文候補%2d：%s\n", n, b); /*%2d は数字を2桁分だけ右よせにする*/
  }

  return 0;
}  
